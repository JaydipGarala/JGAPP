<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="JGAPP.View.LoadingPage"
             Title="LoadingPage">
    <VerticalStackLayout Padding="20" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" >
        <ActivityIndicator 
    x:Name="ai"
    IsRunning="True"  
    HorizontalOptions="Center"
    VerticalOptions="Center"
    Color="Purple"/>
        <Label Text="Please Wait !!!!!" HorizontalOptions="Center" VerticalOptions="Center" TextColor="Red" FontSize="Large" ></Label>
    </VerticalStackLayout>
</ContentPage>